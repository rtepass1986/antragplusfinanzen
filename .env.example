# AWS Configuration
AWS_REGION=your-aws-region
AWS_ACCESS_KEY_ID=your-aws-access-key
AWS_SECRET_ACCESS_KEY=your-aws-secret-key

# S3 Configuration
S3_BUCKET_NAME=your-s3-bucket-name

# Database Configuration (Vercel Postgres or any PostgreSQL provider)
DATABASE_URL="postgresql://user:password@host:port/database?schema=public"

# OpenAI Configuration
OPENAI_API_KEY=your-openai-api-key

# NextAuth Configuration
NEXTAUTH_URL=https://your-production-domain.vercel.app
NEXTAUTH_SECRET=your-nextauth-secret-min-32-chars

# Email Service (Resend - https://resend.com)
RESEND_API_KEY=re_your_resend_api_key
EMAIL_FROM=noreply@yourdomain.com

# reCAPTCHA v3 (Google reCAPTCHA - https://www.google.com/recaptcha)
NEXT_PUBLIC_RECAPTCHA_SITE_KEY=your_recaptcha_site_key
RECAPTCHA_SECRET_KEY=your_recaptcha_secret_key

# Rate Limiting (Optional - Upstash Redis for production)
# If not set, uses in-memory rate limiting (development only)
# UPSTASH_REDIS_REST_URL=https://your-redis-url.upstash.io
# UPSTASH_REDIS_REST_TOKEN=your_upstash_token

# Google OAuth (Optional - if using Google sign-in)
# GOOGLE_CLIENT_ID=your-client-id.apps.googleusercontent.com
# GOOGLE_CLIENT_SECRET=your-google-client-secret

# Optional: For local development
# NEXTAUTH_URL=http://localhost:3000
